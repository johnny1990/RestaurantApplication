@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {


        <form asp-action="Logout" asp-controller="Account" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a class="nav-link text-dark"  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                </li>
                <li>
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </li>
            </ul>
        </form>
    }
    else
    {
<li class="nav-item">
    <a class="nav-link text-dark" href="/Account/Register">Register</a>
</li>
        <li class="nav-item">
            <a class="nav-link text-dark"  href="/Account/Login">Login</a>
        </li>
    }
</ul>
